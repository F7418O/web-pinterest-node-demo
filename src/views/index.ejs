<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest Demo</title>
    <%- include("partials/head.ejs")%>
</head>
<body>
    
    <%- include("partials/navbar.ejs")%>
    <div class="container p-4">
        <div class="row">
            <div class="card-columns">
                <% images.forEach( function(image){%>
                    <div class="card animate__animated animate__fadeInUp">
                        <img src="<%= image.path %>" alt="" class="card-img-top">
                        <div class="card-body">
                            <h1 class="card-title"><%= image.title%></h1>
                            <p class="card-text"><%= image.description%></p>
                            <p class="card-text"><%= format(image.create_at)%></p>
                            <a class="btn btn-primary" href="/image/<%= image.id%>">View Profile</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

</body>
</html>